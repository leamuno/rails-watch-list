<div class="d-flex align-items-center">
  <h1 class="">Your Lists</h1>
  <%= link_to new_list_path, class: "navbar-brand mx-3" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>

<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies.any? ?  list.movies.first.poster_url : "https://m.media-amazon.com/images/I/51VvD9VZDQL.__AC_SX300_SY300_QL70_FMwebp_.jpg" %>)">
      <%= link_to list.name, list_path(list), class: "text-decoration-none text-light"  %>
    </div>
  <% end %>
</div>
